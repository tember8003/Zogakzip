generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Group {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  password     String
  isPublic     Boolean
  imageUrl     String?
  likeCount    Int      @default(0)
  postCount    Int      @default(0)
  introduction String?
  createdAt    DateTime @default(now())
  //batge Batge[] //나중에 빠질 수도 있음.
}
